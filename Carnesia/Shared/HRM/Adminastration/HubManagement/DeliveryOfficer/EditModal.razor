<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                    <MudText Typo="Typo.h4">Arman</MudText>
                    <MudTextField T="string" Label="Contact" Required="true" RequiredError="Contact is required!"/>
                    <MudTextField T="string" Label="Hub" Required="true" RequiredError="Hub is required!"/>

                    <div class="d-flex justify-end my-5">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto">Submit</MudButton>
                    </div>
            </MudForm>
    </DialogContent>
</MudDialog>

@code {
     [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    // Submit Close
    void Submit() => MudDialog.Close(DialogResult.Ok(true));

    // Form Ref
    bool success;
    string[] errors = { };
    MudForm form;
}
