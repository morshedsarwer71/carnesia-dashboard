@using Carnesia.Domain.Dashboard.ReturnRefund

<MudDialog>
	<DialogContent>
		<MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
			<MudNumericField @bind-Value="Pay.refundAmount" Label="Refund Amount" Max="Pay.amount" Immediate="true" Required="true" RequiredError="Refund amount is required!" />
			<MudTextField @bind-Value="Pay.refundPaymentRef" Label="Refund Ref" Immediate="true" />

			<div class="d-flex justify-end my-5">
				<MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" OnClick="Submit">Submit</MudButton>
			</div>
		</MudForm>
	</DialogContent>
</MudDialog>

@code {
	[CascadingParameter] MudDialogInstance MudDialog { get; set; }

	[Parameter]
	public ReturnRefundPaymentDTO Pay { get; set; } = new ReturnRefundPaymentDTO();

	// Submit Close
	void Submit() => MudDialog.Close(DialogResult.Ok<ReturnRefundPaymentDTO>(Pay));

	// Form Ref
	bool success;
	string[] errors = { };
	MudForm form;
}