<MudDialog>
	<DialogContent>
		<MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
			<MudTextField @bind-Value="comment" Label="Comment" Immediate="true" Lines="5" />

			<div class="d-flex justify-end my-5">
				<MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" OnClick="Submit">Submit</MudButton>
			</div>
		</MudForm>
	</DialogContent>
</MudDialog>
@code {
	[CascadingParameter] MudDialogInstance MudDialog { get; set; }

	[Parameter]
	public string comment { get; set; }

	// Form Ref
	bool success;
	string[] errors = { };
	MudForm form;

	// Submit Close
	void Submit() => MudDialog.Close(DialogResult.Ok<string>(comment));
}
