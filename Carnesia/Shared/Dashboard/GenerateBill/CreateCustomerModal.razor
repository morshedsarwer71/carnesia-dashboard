@using Carnesia.Domain.Dashboard.GenerateBill
<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                <MudTextField @bind-Value="FormData.firstName" Label="First Name" Immediate="true" Required="true" RequiredError="First Name is required!"/>
                <MudTextField @bind-Value="FormData.lastName" Label="Last Name" Immediate="true"/>
                <MudTextField @bind-Value="FormData.phoneNumber" Label="Phone Number" Immediate="true" Required="true" RequiredError="Phone Number is required!"/>
                <MudTextField @bind-Value="FormData.email" Label="Email" Immediate="true"/>
                <MudTextField @bind-Value="FormData.address" Label="Address" Immediate="true"/>
                <MudTextField @bind-Value="FormData.memebershipId" Label="Membership ID (if any)" Immediate="true"/>

                <div class="d-flex justify-end my-5">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" OnClick="Submit">Submit</MudButton>
                </div>
        </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public GenerateBillCreateCustomerDTO FormData { get; set; } = new GenerateBillCreateCustomerDTO();

    // Form Ref
    bool success;
    string[] errors = { };
    MudForm form;

    // Submit Close
	void Submit() => MudDialog.Close(DialogResult.Ok<GenerateBillCreateCustomerDTO>(FormData));
}
