@using Carnesia.Domain.CMS.PaymentOffer

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                <MudTextField @bind-Value="FormData.offerText" Label="Offer Text" Immediate="true" Required="true" RequiredError="Offer Text is required!"/>

                <div class="d-flex justify-end my-5">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" OnClick="Submit">Submit</MudButton>
                </div>
        </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public AddTextDTO FormData{get;set;} = new AddTextDTO();

    // Form Ref
    bool success;
    string[] errors = { };
    MudForm form;

    // Submit Close
    void Submit() => MudDialog.Close(DialogResult.Ok<AddTextDTO>(FormData));
}
