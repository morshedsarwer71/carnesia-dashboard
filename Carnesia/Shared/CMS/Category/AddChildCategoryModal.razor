@using Carnesia.Domain.CMS.Category

@inject ICategory _category 
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                    <MudTextField @bind-Value="@FormData.childCat" Immediate="true" Label="Child Category Name" Required="true" RequiredError="Child Category Name is required!"/>

                    <div class="d-flex justify-end my-5">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" OnClick="Submit">Submit</MudButton>
                    </div>
            </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public CreateChildCategoryDTO FormData{get;set;} = new CreateChildCategoryDTO();

    // Submit Close
    void Submit() => MudDialog.Close(DialogResult.Ok<CreateChildCategoryDTO>(FormData));

    // Form Ref
    bool success;
    string[] errors = { };
    MudForm form;
}
