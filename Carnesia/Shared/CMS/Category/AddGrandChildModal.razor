@using Carnesia.Domain.CMS.Category
@inject IBase64 _base64


<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                    <MudTextField @bind-Value="FormData.gChildCat" Label="Category Name" Required="true" RequiredError="Category Name is required!"/>
                    <div class="d-flex justify-end my-5">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" OnClick="Submit" Class="ml-auto">Submit</MudButton>
                    </div>
            </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public CreateGrandChildCatDTO FormData{get;set;} = new CreateGrandChildCatDTO();

    // Form Ref
    bool success;
    string[] errors = { };
    MudForm form;

    // Submit Close
    void Submit() => MudDialog.Close(DialogResult.Ok<CreateGrandChildCatDTO>(FormData));
}
