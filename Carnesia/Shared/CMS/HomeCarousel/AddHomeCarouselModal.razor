@using Carnesia.Domain.CMS.HomeCarousel
@inject IBase64 _base64


<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                    <MudTextField @bind-Value="FormData.name" Label="Name" Required="true" RequiredError="Name is required!"/>
                    <MudTextField @bind-Value="FormData.url" Label="URL" Required="true" RequiredError="URL is required!"/>

                    <InputFile id="banner-image" OnChange="@ValidateImageMobile" hidden accept=".webp" />
                    <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Filled.CloudUpload" for="banner-image" Class="mt-5" Required="true">
                        Upload Carousel Image For Mobile View
                    </MudButton>
                    <MudText Class="mt-1">1280 * 450(.webp only. Max 300Kb)</MudText>
                    <br/>
                    <MudImage Src="@($"data:image/webp;base64,{FormData.base64AttchMobile}")" Alt="" Elevation="25" Class="rounded-lg mt-5" Style="width:20%" />

                    <InputFile id="banner-image-pc" OnChange="@ValidateImagePc" hidden accept=".webp" />
                    <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Filled.CloudUpload" for="banner-image-pc" Class="mt-5" Required="true">
                        Upload Carousel Image For PC View
                    </MudButton>
                    <MudText Class="mt-1">1280 * 400(.webp only. Max 300Kb)</MudText>
                    <br/>
                    <MudImage Src="@($"data:image/webp;base64,{FormData.base64AttchPc}")" Alt="" Elevation="25" Class="rounded-lg mt-5" Style="width:20%" />
                    <MudText Color="Color.Error">@ImageError</MudText>
                    <div class="d-flex justify-end my-5">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" OnClick="CreateCarousel">Submit</MudButton>
                    </div>
            </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }


    [Parameter]
    public AddHomeCarouselDTO FormData{get;set;} = new AddHomeCarouselDTO();

    // Form Ref
    bool success;
    string[] errors = { };
    MudForm form;

    // Image SRC
    private string ImageSRC { get; set; }

    // Image Error
    private string ImageError { get; set; }

    // Image Validation
    private async Task ValidateImageMobile(InputFileChangeEventArgs ImageFile)
    {
        ImageError = String.Empty;
        try
        {
            FormData.base64AttchMobile = await _base64.ConvertToBase64(306000, 1280, 450, ImageFile);
        }
        catch(Exception e)
        {
            ImageError = e.Message;
        }
    }

    private async Task ValidateImagePc(InputFileChangeEventArgs ImageFile)
    {
        ImageError = String.Empty;
        try
        {
            FormData.base64AttchPc = await _base64.ConvertToBase64(306000, 1280, 450, ImageFile);
        }
        catch(Exception e)
        {
            ImageError = e.Message;
        }
    }

    // Submit Close
    void Submit() => MudDialog.Close(DialogResult.Ok<AddHomeCarouselDTO>(FormData));

    // Create Banner
    private void CreateCarousel()
    {
        if (String.IsNullOrEmpty(FormData.base64AttchMobile) || String.IsNullOrEmpty(FormData.base64AttchPc))
        {
            ImageError = "Please upload both images!";
            return;
        }

        Submit(); 
    }

}
