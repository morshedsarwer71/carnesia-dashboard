@using Carnesia.Domain.OMS.Zones

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                    <MudTextField @bind-Value="@FormData.districtName" Immediate="true" Label="District Name" Required="true" RequiredError="District Name is required!"/>

                    <div class="d-flex justify-end my-5">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" OnClick="Submit">Submit</MudButton>
                    </div>
            </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public AddDistrictDTO FormData{get;set;} = new AddDistrictDTO();

    // Submit Close
    void Submit() => MudDialog.Close(DialogResult.Ok<AddDistrictDTO>(FormData));

    // Form Ref
    bool success;
    string[] errors = { };
    MudForm form;
}
