<MudDialog>
    <DialogContent>
        <MudText>Do you really want to verify this Item? This process cannot be undone.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="@Color.Error" Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="@Color.Primary" Variant="Variant.Filled" OnClick="Submit">Okay</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}