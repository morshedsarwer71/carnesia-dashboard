@using Carnesia.Domain.WMS.ReturnManagement.POCO
@using Carnesia.Domain.Common.POCO
<MudPaper Class="px-16 pb-16 pt-10 ma-2 mt-10">
	<MudContainer Fixed="true">
		<MudTable RowsPerPage="25" Items="@Elements" Dense="@tableCommon.Dense" Hover="@tableCommon.Hover" Bordered="@tableCommon.Bordered" Striped="@tableCommon.Striped">
            <ToolBarContent>
                <MudSpacer />
                <MudSpacer />
                <MudTextField @bind-Value="tableCommon.SearchTerm" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"                   Class="mt-0" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Created on</MudTh>
                <MudTh>Created by</MudTh>
                <MudTh>Type</MudTh>
                <MudTh>Return Number</MudTh>
                <MudTh>Supplier</MudTh>
                <MudTh>Quantity</MudTh>
                <MudTh>Return Value</MudTh>
                <MudTh>Amount</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Updated on</MudTh>
                <MudTh>Updated by</MudTh>
                <MudTh>Action</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Created on">@context.CreationDate</MudTd>
                <MudTd DataLabel="Created by">@context.CreatedBy</MudTd>
                <MudTd DataLabel="Type">@context.Type</MudTd>
                <MudTd DataLabel="Return Number">@context.ReturnNumber</MudTd>
                <MudTd DataLabel="Supplier">@context.Supplier</MudTd>
                <MudTd DataLabel="Quantity">@context.Quantity</MudTd>
                <MudTd DataLabel="Return Value">@context.ReturnValue</MudTd>
                <MudTd DataLabel="Amount">@context.Amount</MudTd>
                <MudTd DataLabel="Status">@context.Status</MudTd>
                <MudTd DataLabel="Updated on">@context.UpdateDate</MudTd>
                <MudTd DataLabel="Updated by">@context.UpdatedBy</MudTd>
                <MudTd DataLabel="Action">
					<MudIconButton Icon="@Icons.Filled.RemoveRedEye" Color="Color.Warning" aria-label="View Details"/>
					<MudIconButton Icon="@Icons.Filled.Edit" Color="Color.Success" aria-label="Edit" />
				</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
	</MudContainer>
</MudPaper>

@code {
    // Table Content
    private IEnumerable<ReturnListTablePoco> Elements = new List<ReturnListTablePoco>();

    // Table Customization
    private TableCommon tableCommon = new TableCommon();
}
