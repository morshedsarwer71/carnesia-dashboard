@using Carnesia.Domain.WMS.UpdateUID

<MudDialog>
    <DialogContent>
        <MudForm @ref="form">
                <MudDatePicker @bind-Date="FormData.expDate" Label="Expiry Date" />

                <div class="d-flex justify-end my-5">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="Submit">Submit</MudButton>
                </div>
        </MudForm>
    </DialogContent>
</MudDialog>

@code {
	[CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public UIDDateUpdateDTO FormData{get;set;} = new UIDDateUpdateDTO();

    // Form Ref
    MudForm form;

    // Submit Close
    void Submit() => MudDialog.Close(DialogResult.Ok<UIDDateUpdateDTO>(FormData));
}
