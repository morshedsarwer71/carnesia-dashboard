@page "/assign-delivery"

@using Carnesia.Shared.OMS.AssignDelivery.AllOrders
@using Carnesia.Shared.OMS.AssignDelivery.Dispatch
@using Carnesia.Shared.OMS.AssignDelivery.DispatchedOrder

<MudPaper Elevation="0">
    <MudContainer Class="mt-5 d-flex justify-center">
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined" OverrideStyles="false">
            <MudButton Color="Color.Primary" Variant="CurrentPage == AllOrders ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(AllOrders)">@AllOrders</MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == Dispatch ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(Dispatch)">@Dispatch</MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == DispatchedOrder ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(DispatchedOrder)">@DispatchedOrder</MudButton>
        </MudButtonGroup>
    </MudContainer>
</MudPaper>

@if(CurrentPage == AllOrders)
{
    <AllOrders />
}
else if(CurrentPage == Dispatch)
{
    <Dispatch />
}else if(CurrentPage == DispatchedOrder)
{
    <DispatchedOrder />
}

@code {
    // Pages 
    private string AllOrders = "All Orders";
    private string Dispatch = "Dispatch";
    private string DispatchedOrder = "Dispatched Order";

    // Current Page 
    private string CurrentPage { get; set; } = "All Orders";

    // Change Current Page
    void ChangePage(string pageName)
    {
        CurrentPage = pageName;
    }
}
