@page "/customer-pos"

@using Carnesia.Domain.OMS.CustomerPOS

<MudPaper Class="pa-16 pt-10 ma-2 mt-10">
	<MudContainer Fixed="true" >
		<div class="d-flex justify-end">
			<MudButton Variant="Variant.Filled" Color="Color.Primary">Create Customer</MudButton>
		</div>
		<MudGrid Class="justify-space-between my-5">
			<MudItem md="3">
				<MudAutocomplete T="string" Label="Product" ResetValueOnEmptyText="true" />
			</MudItem>
			<MudItem md="3">
				<MudAutocomplete T="string" Label="Customer" ResetValueOnEmptyText="true" />
			</MudItem>
		</MudGrid>

		<MudTable Items="@Elements" Hover="true" Dense="true">
			<HeaderContent>
				<MudTh>Name & SKU</MudTh>
				<MudTh>MRP</MudTh>
				<MudTh>Selling Price</MudTh>
				<MudTh>Quantity</MudTh>
				<MudTh>Subtotal Value</MudTh>
			</HeaderContent>
			<RowTemplate>
				<MudTd DataLabel="Name & SKU">@context.NameSKU</MudTd>
				<MudTd DataLabel="MRP">@context.MRP</MudTd>
				<MudTd DataLabel="Selling Price">@context.SellingPrice</MudTd>
				<MudTd DataLabel="Quantity">
					<MudNumericField @bind-Value="context.MRP" Label="MRP" Min="1"  Variant="Variant.Text"/>
				</MudTd>
				<MudTd DataLabel="Subtotal Value">@(context.QTY * context.SellingPrice)</MudTd>
			</RowTemplate>
		</MudTable>

		<MudGrid Class="my-5">
			<MudItem md="6">
				<MudText>Customer Name:</MudText>
				<MudText>Phone Number:</MudText>
				<MudText>Customer Address:</MudText>
			</MudItem>
			<MudItem md="6">
				<MudText Style="text-align:end;">Total MRP: 0.00৳</MudText>
				<MudText Style="text-align:end;">Item Quantity: 0</MudText>
				<MudText Style="text-align:end;">Bill Amount: 0.00৳</MudText>
			</MudItem>
		</MudGrid>

		<div class="d-flex justify-center">
			<MudButton Variant="Variant.Filled" Color="Color.Primary" Class="me-1">Generate Bill</MudButton>
			<MudButton Variant="Variant.Filled" Color="Color.Primary">Invoice</MudButton>
		</div>
	</MudContainer>
</MudPaper>

@code {
	// Table Content
	private IEnumerable<CustomerPOSDTO> Elements = new List<CustomerPOSDTO>();
}
