@page "/combo-list"

@using Carnesia.Shared.CMS.Combo

<MudPaper Elevation="0">
    <MudContainer Class="mt-5 d-flex justify-center">
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined" OverrideStyles="false">
            <MudButton Color="Color.Primary" Variant="CurrentPage == ComboListA ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(ComboListA)">@ComboListA</MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == BogoList ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(BogoList)">
                @BogoList
            </MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == ClearanceList ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(ClearanceList)">@ClearanceList</MudButton>
        </MudButtonGroup>
    </MudContainer>
</MudPaper>

@if (CurrentPage == ComboListA)
{
    <ComboListA />
}
else if (CurrentPage == BogoList)
{
    <BogoList />
}
else if (CurrentPage == ClearanceList)
{
    <ClearanceList />
}

@code {
    // Pages 
    private string ComboListA = "Combo List";
    private string BogoList = "Bogo List";
    private string ClearanceList = "Clearance List";

    // Current Page 
    private string CurrentPage { get; set; } = "Combo List";

    // Change Current Page
    void ChangePage(string pageName)
    {
        CurrentPage = pageName;
    }
}
