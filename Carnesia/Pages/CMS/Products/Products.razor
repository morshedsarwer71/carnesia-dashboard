@page "/product"

@using Carnesia.Shared.CMS.Products.CreateProduct
@using Carnesia.Shared.CMS.Products.ProductDetails

<MudPaper Elevation="0">
    <MudContainer Class="mt-5 d-flex justify-center">
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined" OverrideStyles="false">
            <MudButton Color="Color.Primary" Variant="CurrentPage == CreateProduct ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(CreateProduct)">
                @CreateProduct
            </MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == ProductDetails ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(ProductDetails)">
                @ProductDetails
            </MudButton>
        </MudButtonGroup>
    </MudContainer>
</MudPaper>

@if(CurrentPage == CreateProduct)
{
    <CreateProduct />
}
else if(CurrentPage == ProductDetails)
{
    <ProductDetails />
}

@code {
        // Pages
    private string CreateProduct = "Create Product";
    private string ProductDetails = "Product Details";

    // Current Page
    private string CurrentPage = "Create Product";

    // Change Page
    private void ChangePage(string page)
    {
        CurrentPage = page;
    }
}
