@*@page "/dashboard"*@
<MudPaper Class="py-16 px-3 ma-2">
    <MudContainer Fixed="true">
        <MudGrid>
            <MudItem sm="6">
                <MudChart ChartType="ChartType.Bar" ChartSeries="@StoreSeries" XAxisLabels="@XAxisLabels" Width="100%" Height="350px"/>
            </MudItem>
            <MudItem sm="6">
                <MudChart ChartType="ChartType.Bar" ChartSeries="@EcomSeries" XAxisLabels="@XAxisLabels" Width="100%" Height="350px"/>
            </MudItem>
            <MudItem sm="6">
                <MudText Typo="Typo.h6">Stores</MudText>
                <MudChart ChartType="ChartType.Line" ChartSeries="@YearComStore" XAxisLabels="@XAxisLabels" Width="100%" Height="350px" />
            </MudItem>
            <MudItem sm="6">
                <MudText Typo="Typo.h6">E-commerce</MudText>
                <MudChart ChartType="ChartType.Line" ChartSeries="@YearComEcom" XAxisLabels="@XAxisLabels" Width="100%" Height="350px" />
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudPaper>

