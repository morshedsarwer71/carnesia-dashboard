@page "/dashboard"
@using Carnesia.Shared.Dashboard.CustomerProfile
@using Carnesia.Shared.Dashboard.GenerateBill
@using Carnesia.Shared.Dashboard.Orders
@using Carnesia.Shared.Dashboard.ReturnRefund
@using Carnesia.Shared.Dashboard.Dashboard
@using Carnesia.Shared.Dashboard.SalesReport

<MudPaper Elevation="0">
    <MudContainer Class="mt-5 d-flex justify-center">
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined" OverrideStyles="false">
            @*<MudButton Color="Color.Primary" Variant="CurrentPage == DashBoard ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(DashBoard)">@DashBoard</MudButton>*@
            <MudButton Color="Color.Primary" Variant="CurrentPage == SalesReport ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(SalesReport)">@SalesReport</MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == CustomerProfile ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(CustomerProfile)">@CustomerProfile</MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == GenerateBill ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(GenerateBill)">@GenerateBill</MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == Orders ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(Orders)">@Orders</MudButton>
            <MudButton Color="Color.Primary" Variant="CurrentPage == ReturnAndRefund ? Variant.Filled : Variant.Outlined" OnClick="() => ChangePage(ReturnAndRefund)">@ReturnAndRefund</MudButton>
        </MudButtonGroup>
    </MudContainer>
</MudPaper>

@if (CurrentPage == CustomerProfile)
{
    <CustomerProfile />
}else if (CurrentPage == GenerateBill)
{
    <GenerateBill />
}else if (CurrentPage == Orders)
{
    <Orders />
}else if (CurrentPage == ReturnAndRefund)
{
    <ReturnRefund />
}else if (CurrentPage == DashBoard)
{
    <DashboardReport />
}else if (CurrentPage == SalesReport)
{
    <SalesReport />
}

@code {
    // Pages
    public string DashBoard = "Dashboard";
    public string SalesReport = "Sales Report";
    public string CustomerProfile = "Customer Profile";
    public string GenerateBill = "Generate Bill";
    public string Orders = "Orders";
    public string ReturnAndRefund = "Return & Refund";


    // Current Page
    public string CurrentPage { get; set; } = "Dashboard";

    // Change Current Page
    void ChangePage(string pageName)
    {
        CurrentPage = pageName;
    }
}
